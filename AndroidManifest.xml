<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hackmaster.critfumble"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <application
        android:allowBackup="true"
        android:name="Global"
        android:icon="@drawable/hat"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hackmaster.critfumble.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="Fumble" android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name="ShowFumble"></activity>
        <activity android:name="Crit" android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name="Crit2" android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name="ShowCrit"></activity>
    </application>

</manifest>